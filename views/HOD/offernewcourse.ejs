<%- include('partials/HODhead') %>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Offer New Course</h1>
<% if (locals.status) { %>
    <% if (status[0] === 'E') { %>
        <h4 class="text-center text-danger"><%= status %></h4>
    <% } else{%>
        <h4 class="text-center text-success"><%= status %></h4>
        <% } %>
        <% } else{%>
            <h4 class="text-center text-success">&nbsp;</h4>
            <% } %>
    
    <!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p> -->

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Courses</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table  class="table text-center" id="dataTable" width="100%" cellspacing="0">
                   <form action="./addnewcourse">
                    <tr>
                        <th>
                            Select
                        </th>
                        <th>
                            Options
                        </th>
                    </tr>
                    
                    <tr>
                        <th>
                            Course Code
                        </th>
                        <td>
                           <select class="btn btn-outline-primary" name="courseCode" id="courseCode" >
                            <option value="disabled" disabled selected>Select</option>
                            <% courseCodes.forEach(course => { %>
                                <option value="<%= course %>"> <%= course %> </option>
                            <% }) %>
                            
                           </select> 
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Time Slot
                        </th>
                        <td>
                            <select  class="btn btn-outline-primary" name="timeSlot" id="timeSlot" onchange="timeSlotChanged(this);">
                                <option value="disabled" disabled selected>Select</option>
                                <% timeSlots.forEach(slot => { %>
                                    <option value="<%= slot.slot_id %>"> <%= slot.slot_day %> <%= slot.slot_time %> </option>
                                <% }) %>
                                
                               </select> 
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Faculty
                        </th>
                        <td>
                            <select  class="btn btn-outline-primary" name="faculty" id="facultyDetails">
                                <option value="null">  To Be Decided </option>
                                <% facultyDetails.forEach(faculty => { %>
                                    <option value="<%= faculty.faculty_id %>"> <%= faculty.faculty_firstname %> <%= faculty.faculty_lastname %> <%= faculty.faculty_id %> </option>
                                <% }) %>
                                
                               </select> 
                        </td>
                    </tr>
                    <tr>
                        <th> </th>
                        <td><button class='btn btn-info' type="submit">Add Course</button></td>
                        
                    </tr>
                    
                   </form>
                </table>
            </div>
        </div>
    </div>

</div>
<%- include('partials/HODfooter') %>

