<%- include('partials/facultyhead') %>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Preferred Room Requests</h1>
    <!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p> -->

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Requests</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table  class="table text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr  >
                            <th >#</th>
                            <th >Section Code</th>
                            <th >Preferred Rooms</th>
                            <th > </th>
                            
                        </tr>
                    </thead>
                   
                  <tbody>
                   
                    <% sectionCodes.forEach((section,i) => { %>
                        <tr>
                            <td> <%= i+1 %> </td>
                            <td> <%= section  %> </td>
                            <td>
                    <% roomRequestData.forEach(preferred => { %>
                        <% if (preferred.section_code === section) { %>
                             <p class="d-inline-block px-2"> <i class="fa fa-chevron-circle-right"></i> <%= preferred.room_id %> </p> 
                        <% } %>

                        
                    <% }) %>
                </td>
                <td> <a href="./deleterequestroom?sectionCode=<%= section %>" class="btn btn-danger " onclick=" alert('Request Deleted for : ', sectionCode);" > Delete Request <i class="fa fa-minus-square"></i></a> </td>
                </tr>
                    <% }) %>
                
                  </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<%- include('partials/facultyfooter') %>