<%- include('partials/facultyhead') %>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Course Plan</h1>
    <!-- <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below.
        For more information about DataTables, please visit the <a target="_blank"
            href="https://datatables.net">official DataTables documentation</a>.</p> -->

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Courses</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table  class="table text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr  >
                            <th >#</th>
                            <th >Course Code</th>
                            <th >Course Name</th>
                            <th >Hours</th>
                            <th >Section Code</th>
                            <th >Time Slot </th>
                            <th >Room</th>
                            <th> </th>
                            
                        </tr>
                    </thead>
                   
                    <tbody>
                        <%let x = 1; alreadyRequestedCourses.forEach(function(course){ %>   
                            <tr >
                              <td class="align-middle"><%= x %></td>
                              <% x++ %>
                              <td class="align-middle" ><%=course.course_code%></td>
                              <td class="align-middle"><%=course.course_title%></td>
                              <td class="align-middle"><%=course.course_credithours%> + 0</td>
                              <td class="align-middle"><%=course.section_code%></td>
                              <td class="align-middle"><%=course.slot_day%> <%=course.slot_time%></td>
                              <% if(course.room_id === null){%>
                                  <td class="align-middle">TBD</td>
                                  <% } else {%>
                              <td class="align-middle"><%=course.room_id%></td>
                              <% } %>
                             <td class="align-middle">
          
                              <a class="btn disabled btn-info " href="./requestnewcourse?sectioncode=<%=course.section_code%>">Request Pending </a>
                              <br>
                              <br>
                              <a class="btn btn-danger" href="./cancelrequestnewcourse?sectioncode=<%=course.section_code%>">Delete Request <i class="fas fa-minus-square"></i></a>
                                </td>
                            </tr>
                            <% }); %>



                        <%let i = 1; availableCourses.forEach(function(course){ %>   
                  <tr >
                    <td class="align-middle"><%= i %></td>
                    <% i++ %>
                    <td class="align-middle" ><%=course.course_code%></td>
                    <td class="align-middle"><%=course.course_title%></td>
                    <td class="align-middle"><%=course.course_credithours%> + 0</td>
                    <td class="align-middle"><%=course.section_code%></td>
                    <td class="align-middle"><%=course.slot_day%> <%=course.slot_time%></td>
                    <% if(course.room_id === null){%>
                        <td class="align-middle">TBD</td>
                        <% } else {%>
                    <td class="align-middle"><%=course.room_id%></td>
                    <% } %>
                   <td>

                    <a class="btn btn-primary" href="./requestnewcourse?sectioncode=<%=course.section_code%>">Request Course <i class="fas fa-plus-square"></i></a>
                    <br>
                    
                      </td>
                  </tr>
                  <% }); %>
            </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<%- include('partials/facultyfooter') %>